{
    "manifest_version": 3,
    "name": "Reqnroll Recorder",
    "version": "1.0.0",
    "description": "Automatically record browser interactions and generate Reqnroll BDD tests with Gherkin feature files and C# step definitions.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "128": "icons/icon128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}