{
    "manifest_version": 3,
    "name": "StepForge for Reqnroll",
    "version": "1.0.0",
    "description": "Automatically record browser interactions and generate Reqnroll BDD tests. Where test steps are crafted.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "specflowrecorder@gmail.com"
        }
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}